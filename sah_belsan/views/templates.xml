                    <t t-set="product_variant" t-value="product_variant or product._create_first_product_variant()"/>
                    <t t-set="in_wish" t-value="product.product_variant_ids &amp; request.env['product.wishlist'].current().mapped('product_id')"/>
                    <a class="btn btn-default btn-xs slider_product_compare_icon o_add_wishlist" t-att-disabled='in_wish or None' title="Add to Wishlist" t-att-data-product-product-id="product.product_variant_ids[0].id" data-action="o_wishlist">
                        <i class="fa fa-heart"></i>
                    </a>
                </t>
            </xpath>

        </template>

