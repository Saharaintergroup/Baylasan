        <template id="web.login" name="Login">
            <t t-call="web.login_layout">
                <section class="login_section">
                    <div class="container">
                        <form class="oe_login_form" role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = this.action + location.hash">
                            <h3 class="text-center mb-5">تسجيل الدخول</h3>
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                                <label for="db" class="col-form-label">Database</label>
                                <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                    <input type="text" name="db" t-att-value="request.db" id="db" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" readonly="readonly"/>
                                    <span class="input-group-append">
                                        <a role="button" href="/web/database/selector" class="btn btn-secondary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i></a>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group field-login">
                                <input type="text"  placeholder="البريد الالكتروني" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''} sign_in_inputs" required="required" autofocus="autofocus" autocapitalize="off"/>
                            </div>

                            <div class="form-group field-password">
                                <input type="password" placeholder="كلمة المرور" name="password" id="password" t-attf-class="form-control #{'form-control-sm' if form_small else ''} sign_in_inputs" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                            </div>

                            <p class="alert alert-danger" t-if="error" role="alert">
                                <t t-esc="error"/>
                            </p>
                            <p class="alert alert-success" t-if="message" role="status">
                                <t t-esc="message"/>
                            </p>
                            <!--                            <div class="text-center">-->
                            <!--                                <a href="/web/reset_password?" class="forget_pass">هل نسيت كلمة المرور ؟</a>-->
                            <!--                            </div>-->

                            <div t-attf-class="clearfix oe_login_buttons sign_in_form_custom mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                                <button type="submit" class="btn form_btn btn-lg login_in_btn">تسجيل الدخول</button>
                                <t t-if="debug">
                                    <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm btn-block">Log in as superuser</button>
                                </t>
                                <div class="o_login_auth"/>
                            </div>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                        </form>
                    </div>
                </section>
            </t>
        </template>



        <template id="auth_signup.signup" name="Sign up login">
            <t t-call="web.login_layout">
                <section class="register_section">
                    <div class="container">
                        <form class="oe_signup_form" role="form" method="post" t-if="not message">
                            <h3>تسجيل حساب جديد</h3>
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-row">
                                <div class="form-group field-name col-md-12">
                                    <label for="name" class="col-form-label">اﻷسم الثلاثي</label>
                                    <input type="text" name="name" t-att-value="name" id="name" class="form-control o_website_form_input form-control-sm" placeholder="اﻷسم الثلاثي"
                                           required="required"/>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="mobile" class="col-form-label">رقم الهاتف</label>
                                    <input type="text" class="form-control o_website_form_input" name="mobile" t-att-value="mobile" id="mobile" required="required" placeholder="رقم الهاتف" />
                                </div>
                                <div class="form-group field-login col-md-12">
                                    <label for="login" class="col-form-label">البريد الالكتروني</label>
                                    <input type="text" class="form-control o_website_form_input" name="login" t-att-value="login" id="login" required="required" placeholder="البريد الالكتروني" />
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="city" class="col-form-label">المدينة</label>
                                    <input type="text" class="form-control o_website_form_input" name="city" t-att-value="city" id="city" required="required" placeholder="المدينة"/>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="deliver" class="col-form-label">عنوان الشحن</label>
                                    <input type="text" class="form-control o_website_form_input" name="deliver" t-att-value="deliver" id="deliver" required="required" placeholder="عنوان الشحن"/>
                                </div>
                                <div class="form-group field-password col-md-12">
                                    <label for="password" class="col-form-label">كلمة المرور</label>
                                    <input type="password" class="form-control o_website_form_input" name="password" id="password" required="required" placeholder="كلمة المرور" />
                                </div>
                                <div class="form-group field-confirm_password col-md-12">
                                    <label for="confirm_password" class="col-form-label">أكيد كلمة المرور</label>
                                    <input type="password" class="form-control o_website_form_input" name="confirm_password" id="confirm_password" required="required" placeholder="تأكيد كلمة المرور" />
                                </div>


                                <!--                                    <t t-call="auth_signup.fields">-->
                                <!--                                        <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>-->
                                <!--                                    </t>-->

                                <p class="alert alert-danger" t-if="error" role="alert">
                                    <t t-esc="error"/>
                                </p>
                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                <input type="hidden" name="token" t-att-value="token"/>
                                <div class="text-center m-auto oe_login_buttons pt-3 form_register_contain">
                                    <button type="submit" class="btn form_btn btn-lg register_btn text-center"> انشاء حساب جديد</button>
                                    <div class="o_login_auth"/>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </t>
        </template>


    </data>
</odoo>